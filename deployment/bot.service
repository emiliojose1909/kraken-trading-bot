[Unit]
Description=Kraken Trading Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/bot-trading
ExecStart=/home/ubuntu/bot-trading/venv/bin/python3 trading_bot.py
Restart=always
RestartSec=10
EnvironmentFile=/home/ubuntu/bot-trading/.env

[Install]
WantedBy=multi-user.target
